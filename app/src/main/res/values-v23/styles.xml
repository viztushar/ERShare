<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- generalization start -->
    <style name="Theme.ERShare.Base" parent="Theme.Prototype.ERShare.Base">
        <item name="colorPrimaryDark">?colorPrimaryDark23</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">?statusBarColor</item>
        <item name="android:windowLightStatusBar">?useLightStatusBar</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.ERShare.Dark.Base" parent="Theme.Prototype.ERShare.Dark.Base">
        <item name="colorPrimaryDark">?colorPrimaryDark23</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">?statusBarColor</item>
        <item name="android:windowLightStatusBar">?useLightStatusBar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <!-- generalization end -->

    <style name="Theme.ERShare" parent="Theme.ERShare.Base">
        <item name="statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.ERShare.NoActionBar.StaticStatusBar" parent="Theme.ERShare.NoActionBar">
        <item name="statusBarColor">@android:color/transparent</item>
    </style>
</resources>